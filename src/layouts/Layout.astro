---
import ThemeToggle from '../components/ThemeToggle.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Blog de Noticias con Astro" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;700&display=swap" rel="stylesheet">
		<title>{title}</title>
	</head>
	<body>
		<header>
			<div class="container header-content">
				<div class="header-left">
					<h1 class="site-title">Blog de Noticias</h1>
					<nav>
						<ul>
							<li><a href="/">Inicio</a></li>
							<li><a href="/noticias">Noticias</a></li>
							<li><a href="/sobre-nosotros">Sobre Nosotros</a></li>
						</ul>
					</nav>
				</div>
				<div class="header-right">
					<ThemeToggle />
				</div>
			</div>
		</header>
		<main class="container">
			<slot />
		</main>
		<footer>
			<div class="container">
				<p>&copy; 2023 Blog de Noticias. Todos los derechos reservados.</p>
			</div>
		</footer>
	</body>
</html>
<style is:global>
	:root {
		--accent: 64, 116, 220;
		--accent-light: 108, 156, 255;
		--accent-dark: 32, 58, 110;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
		--background-color: #f8f9fa;
		--text-color: #333;
		--card-background: #fff;
		--card-shadow: rgba(0, 0, 0, 0.1);
		--header-background: #fff;
		--header-text: #333;
		--footer-background: #f1f3f5;
		--footer-text: #666;
	}

	.dark-theme {
		--background-color: #1a1a1a;
		--text-color: #e0e0e0;
		--card-background: #2a2a2a;
		--card-shadow: rgba(255, 255, 255, 0.1);
		--header-background: #2a2a2a;
		--header-text: #e0e0e0;
		--footer-background: #222;
		--footer-text: #999;
	}

	html {
		font-family: 'Roboto', sans-serif;
		background: var(--background-color);
		color: var(--text-color);
	}
	body {
		margin: 0;
		padding: 0;
		display: flex;
		flex-direction: column;
		min-height: 100vh;
		transition: background-color 0.3s ease, color 0.3s ease;
	}
	.container {
		width: 100%;
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 1rem;
		box-sizing: border-box;
	}
	main {
		flex: 1;
		padding: 2rem 0;
	}
	header {
		background-color: var(--header-background);
		box-shadow: 0 2px 4px var(--card-shadow);
		padding: 1rem 0;
		color: var(--header-text);
	}
	.header-content {
		display: flex;
		justify-content: space-between;
		align-items: center;
		flex-wrap: wrap;
	}
	.header-left {
		display: flex;
		align-items: center;
		flex-wrap: wrap;
	}
	.site-title {
		font-size: 2rem;
		color: rgb(var(--accent));
		margin: 0;
		margin-right: 2rem;
	}
	nav ul {
		list-style-type: none;
		padding: 0;
		display: flex;
		margin: 0;
		flex-wrap: wrap;
	}
	nav ul li {
		margin-right: 1.5rem;
	}
	nav ul li:last-child {
		margin-right: 0;
	}
	nav ul li a {
		color: var(--header-text);
		text-decoration: none;
		font-weight: 500;
		transition: color 0.3s ease;
	}
	nav ul li a:hover {
		color: rgb(var(--accent-light));
	}
	.header-right {
		display: flex;
		align-items: center;
	}
	footer {
		background-color: var(--footer-background);
		color: var(--footer-text);
		text-align: center;
		padding: 1rem 0;
		margin-top: 2rem;
	}
	h1, h2, h3, h4, h5, h6 {
		color: rgb(var(--accent));
	}
	a {
		color: rgb(var(--accent));
		text-decoration: none;
		transition: color 0.3s ease;
	}
	a:hover {
		color: rgb(var(--accent-light));
	}

	@media (max-width: 768px) {
		.header-content {
			flex-direction: column;
			align-items: flex-start;
		}
		.header-left {
			margin-bottom: 1rem;
		}
		.header-right {
			align-self: flex-end;
		}
		nav ul {
			margin-top: 1rem;
		}
		nav ul li {
			margin-right: 1rem;
			margin-bottom: 0.5rem;
		}
	}
</style>

<script>
	function setTheme(theme) {
		if (theme === 'dark') {
			document.documentElement.classList.add('dark-theme');
		} else {
			document.documentElement.classList.remove('dark-theme');
		}
		localStorage.setItem('theme', theme);
	}

	const storedTheme = localStorage.getItem('theme') || (window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');
	setTheme(storedTheme);

	document.addEventListener('DOMContentLoaded', () => {
		const themeToggle = document.getElementById('theme-toggle');
		themeToggle.addEventListener('click', () => {
			const currentTheme = localStorage.getItem('theme') || 'light';
			const newTheme = currentTheme === 'light' ? 'dark' : 'light';
			setTheme(newTheme);
		});
	});
</script>